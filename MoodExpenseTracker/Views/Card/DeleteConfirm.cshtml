﻿﻿@model MoodExpenseTracker.Models.CardDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<nav>
    <a href="/Card/Details/@Model.CardId">Cancel</a>
</nav>

<div>
    <h4> Name: @Model.CardName </h4>
    <p> Type: @Model.CardType </p>
</div>

<h4>Are you sure that you want to delete this card?</h4>

<div>
    <form method="POST" action="/Card/Delete/@Model.CardId">
        <button style=" display:block; margin: 0 auto; color:azure; background-color: darkred;">
            Confirm Delete
        </button>
    </form>
</div>