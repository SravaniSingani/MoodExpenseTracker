﻿@model MoodExpenseTracker.Models.WeatherDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<nav>
    <a href="/Weather/Details/@Model.WeatherId">Cancel</a>
</nav>

<div>
    <h4> Name: @Model.WeatherName </h4>
</div>

<h4>Are you sure that you want to delete this Weather? It'll delete all the expenses associated with it.'</h4>

<div>
    <form method="POST" action="/Weather/Delete/@Model.WeatherId">
        <button style=" display:block; margin: 0 auto; color:azure; background-color: darkred;">
            Confirm Delete
        </button>
    </form>
</div>