﻿﻿@model IEnumerable<MoodExpenseTracker.Models.CategoryDto>

@{
    ViewBag.Title = "Create";
}

<h2>Create Category</h2>
<form action="/Category/Create" method="POST">

    <div>
        <label>Name: </label><input type="text" name="CategoryName" />
    </div>
    <div>
        <input type="submit" value="Add Category" />
    </div>

</form>

<style>

    label {
        display: inline-block;
        font-size: 16px;
    }

    input {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.375rem;
    }

        input[type=submit] {
            background-color: #2642de;
            color: white;
            margin-top: 10px;
            padding: 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
</style>